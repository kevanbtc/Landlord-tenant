{
  "name": "digital-giant-l1-connectors",
  "version": "1.0.0",
  "description": "API connectors and bridges for Digital Giant L1 blockchain",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "blockchain",
    "Layer1",
    "connectors",
    "APIs",
    "bridges"
  ],
  "author": "Digital Giant L1 Team",
  "license": "BUSL-1.1",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "web3": "^4.2.2",
    "ethers": "^6.8.1",
    "axios": "^1.6.2",
    "socket.io": "^4.7.4",
    "redis": "^4.6.11",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "rate-limiter-flexible": "^3.0.4",
    "ipfs-core": "^0.18.1",
    "kafkajs": "^2.2.4",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "crypto-js": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digital-giant-l1/connectors.git"
  },
  "bugs": {
    "url": "https://github.com/digital-giant-l1/connectors/issues"
  },
  "homepage": "https://github.com/digital-giant-l1/connectors#readme"
}
